{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/azaf0003/3179_AS2/main/World_data_oilEnergy_V2.csv"
  },
  "width": 600,
  "height": 500,
  "encoding": {
    "x": {"field": "Year", 
    "type": "temporal", "axis":  {"grid": false, "ticks": false}}
    
    
    },

  "layer": [
    {
      "encoding": {
        "color": {"field": "Energy Type", "type": "nominal", "legend": null, 
        "scale": {"range": ["#8b0000", "#8b0000", "#ffe6e6", "#ffe6e6", "#ffe6e6", "#8b0000","#ffe6e6", "#ffe6e6" ]}},
        "y": {"field": "Value", "type": "quantitative", "axis": {"domainColor":""}, "title": "Energy (KWh)"}
      },
      "layer": [
        {"mark": "line"},
        {"transform": [{"filter": {"selection": "hover"}}], "mark": "point"},
        {
      "mark": {
        "type": "text",
        "align": "left",
        "dx":40,
        "dy":-10
      },
      "encoding": {
        "text": {"field": "Energy Type", "type": "nominal"},
        "color": {"value": "black"},
        "opacity":{
          "condition": {"test": "year(datum.Year) == 2016 && (datum['Energy Type']=='Oil Consumption - TWh' || datum['Energy Type']=='Coal Consumption - TWh' || datum['Energy Type']=='Gas Consumption - TWh')" , "value": 1},
          "value": 0
        }
      }

    }
      ]
    },
    {
      "transform": [
        {"pivot": "Energy Type", "value": "Value", "groupby": ["Year"]}
      ],
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "selection": "hover"},
          "value": 0
        },
        "tooltip": [
          {
            "field": "Year",
            "type": "temporal",
            "timeUnit": "year",
            "title": "Year"
          },
          {
            "field": "Oil Consumption - TWh",
            "type": "quantitative",
            "format": ".0f"
          },
          {
            "field": "Coal Consumption - TWh",
            "type": "quantitative",
            "format": ".0f"
          },
          {
            "field": "Gas Consumption - TWh",
            "type": "quantitative",
            "format": ".0f"
          },
          {
            "field": "Hydro Generation - TWh",
            "type": "quantitative",
            "format": ".0f"
          },
          {
            "field": "Nuclear Generation - TWh",
            "type": "quantitative",
            "format": ".0f"
          },
          {
            "field": "Geo Biomass Other - TWh",
            "type": "quantitative",
            "format": ".0f"
          },
          {
            "field": "Wind Generation -TWh",
            "type": "quantitative",
            "format": ".0f"
          },
          {
            "field": "Solar Generation - TWh",
            "type": "quantitative",
            "format": ".0f"
          }
        ]
      },
      "selection": {
        "hover": {
          "type": "single",
          "fields": ["Year"],
          "nearest": true,
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }
      }
    },
    {
        "mark": {
          "type": "text",
          "align": "right",
          "dx":60,
          "dy": 200,
          "text": "Others"
        },
        "encoding": {

          "opacity":{
          "condition":
          {"test": " year(datum.Year)== 2017 && datum['Energy Type'] ==['Oil Consumption - TWh']", "value": 1},
          "value": 0

        }
        }
  },
  {
        "mark": {
          "type": "text",
          "align": "right",
          "dx":100,
          "dy": 20,
          "text": "The United States is the world's "
        },
        "encoding": {

          "opacity":{
          "condition":
          {"test": " year(datum.Year)== 2017 && datum['Energy Type'] ==['Oil Consumption - TWh']", "value": 1},
          "value": 0

        }
        }
  },
  {
        "mark": {
          "type": "text",
          "align": "right",
          "dx":100,
          "dy": 40,
          "text": "biggest oil consumer, followed"
        },
        "encoding": {

          "opacity":{
          "condition":
          {"test": " year(datum.Year)== 2017 && datum['Energy Type'] ==['Oil Consumption - TWh']", "value": 1},
          "value": 0

        }
        }
  },
  {
        "mark": {
          "type": "text",
          "align": "right",
          "dx":100,
          "dy": 60,
          "text": "by China, then India and Japan."
        },
        "encoding": {

          "opacity":{
          "condition":
          {"test": " year(datum.Year)== 2017 && datum['Energy Type'] ==['Oil Consumption - TWh']", "value": 1},
          "value": 0

        }
        }
  }

  ],
  "config": {
      "background":"",
  "view": {
     "stroke": "transparent"
  }
}
}
