{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Enerygy Per Capita",
  "data": {
    "url": "https://raw.githubusercontent.com/azaf0003/3179_AS2/main/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
    {
      "name": "Year_Above",
      "value": 1980,
      "bind": {
        "input": "range",
        "min": 1980,
        "max": 2018,
        "step": 1,
        "name": "Minimum year"
      }
    }
  ],
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/azaf0003/3179_AS2/main/per-capita-energy-use.csv"
        },
        "key": "Entity",
        "fields": ["EnergyConsumptionPerCapita(kWh)"]
      }
    }
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape", "stroke": "whitesmoke"},
  "encoding": {
    "color": {
      "field": "EnergyConsumptionPerCapita(kWh)",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "EnergyConsumptionPerCapita(kWh)", "type": "quantitative"}
    ]
  },
  "config": {}
}